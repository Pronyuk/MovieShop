@model MoviewShop.Models.Movie
@{
    ViewBag.Title = "MoviePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre</li>
    <li>Release Date: @(@Model.ReleaseDate.HasValue ? @Model.ReleaseDate.Value.ToLongDateString() : "Not added")</li>
    <li>Date Added: @(@Model.DateAdded.HasValue ? @Model.DateAdded.Value.ToLongDateString() : "Not added")</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>